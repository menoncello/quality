{
  "name": "@dev-quality/utils",
  "version": "0.0.0",
  "description": "Utility functions for DevQuality CLI",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "bun run build --watch",
    "test": "bun test",
    "test:unit": "bun test",
    "test:claude": "CLAUDECODE=1 bun test",
    "lint": "bunx eslint .",
    "format": "echo 'No formatting for utils package'",
    "format:check": "echo 'No formatting check for utils package'",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@dev-quality/types": "workspace:*",
    "@types/node": "24.5.2",
    "bun-types": "1.2.23",
    "typescript": "5.9.2"
  }
}
