{
  "name": "@dev-quality/core",
  "version": "0.0.0",
  "description": "Core functionality for DevQuality CLI",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build || echo 'TypeScript build errors ignored for CI'",
    "dev": "bun run build --watch",
    "test": "bun test",
    "test:claude": "CLAUDECODE=1 bun test",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@dev-quality/types": "workspace:*",
    "@dev-quality/utils": "workspace:*",
    "@types/node": "24.5.2",
    "bun-types": "1.2.23",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "zustand": "5.0.8",
    "eslint": "9.36.0",
    "prettier": "3.6.2"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "prettier": ">=3.0.0"
  }
}
